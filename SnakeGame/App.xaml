<Application x:Class="SnakeGame.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:SnakeGame"
             xmlns:viewModel="clr-namespace:SnakeGame.ViewModel"
             xmlns:view="clr-namespace:SnakeGame.Views">
    <Application.Resources>
        <ResourceDictionary>
            <SolidColorBrush x:Key="BackgroundColor">#000000</SolidColorBrush>
            <SolidColorBrush x:Key="GridBackgroundColor">#292929</SolidColorBrush>
            <SolidColorBrush x:Key="GridLineColor">#494949</SolidColorBrush>
            <SolidColorBrush x:Key="TextColor">#EBEBEB</SolidColorBrush>
            <SolidColorBrush x:Key="OverlayColor">#7f000000</SolidColorBrush>
            <FontFamily x:Key="MainFont">Assets/#Droid Sans Mono</FontFamily>


        </ResourceDictionary>
    </Application.Resources>
</Application>
